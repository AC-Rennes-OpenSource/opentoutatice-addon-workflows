<component name="fr.toutatice.ecm.platform.wf.integration.theme">
	
	<require>org.nuxeo.theme.nuxeo.webapp</require>
	<require>org.opentoutatice.jsf.ui.portal.views.theme</require>

	<extension target="org.nuxeo.theme.styling.service" point="pages">

		<page name="wf-portal-view" charset="utf-8">
			<defaultFlavor>default</defaultFlavor>
			<resources>
				<bundle>nuxeo_includes</bundle>
				<bundle>nuxeo_sassCss</bundle>
				<!-- <resource>bootstrap.min.js</resource>
				<bundle>pv_date_picker</bundle> -->
				<resource>pv-wf.min.css</resource> 
				<resource>postmessage.js</resource>
			</resources>
		</page>

	</extension>

	<extension target="org.nuxeo.ecm.platform.WebResources"
		point="resources">
		
		<resource name="pv-wf.min.css">
			<uri>/css/pv-wf.min.css</uri>
		</resource>

	</extension>

</component>